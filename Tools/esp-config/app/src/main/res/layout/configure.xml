<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/labelHeaderNetwork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Network" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelSSID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SSID" />

            <EditText
                android:id="@+id/textSSID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password" />

            <EditText
                android:id="@+id/textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:text="" />

            <TextView
                android:id="@+id/labelURIs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proxy(s)" />

            <EditText
                android:id="@+id/textURIs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="ssdp calvinip://192.168.0.108:5000" />

        </LinearLayout>

        <TextView
            android:id="@+id/labelHeaderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelOrganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Organization" />

            <EditText
                android:id="@+id/textOrganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelOrganizationalUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OrganizationalUnit" />

            <EditText
                android:id="@+id/textOrganizationalUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelPurpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purpose" />

            <EditText
                android:id="@+id/textPurpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Group" />

            <EditText
                android:id="@+id/textGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name" />

            <EditText
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="constrained" />
        </LinearLayout>

        <TextView
            android:id="@+id/labelHeaderAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country" />

            <EditText
                android:id="@+id/textCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State or Province" />

            <EditText
                android:id="@+id/textState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelLocality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Locality" />

            <EditText
                android:id="@+id/textLocality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Street" />

            <EditText
                android:id="@+id/textStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelStreetNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Street number" />

            <EditText
                android:id="@+id/textStreetNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelBuilding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Building" />

            <EditText
                android:id="@+id/textBuilding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelFloor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Floor" />

            <EditText
                android:id="@+id/textFloor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room" />

            <EditText
                android:id="@+id/textRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />
        </LinearLayout>

        <TextView
            android:id="@+id/labelHeaderOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelOwnerOrganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Organization" />

            <EditText
                android:id="@+id/textOwnerOrganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelOwnerOrganizationUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Organization unit" />

            <EditText
                android:id="@+id/textOwnerOrganizationUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Role" />

            <EditText
                android:id="@+id/textRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/labelPersonOrGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Person or group" />

            <EditText
                android:id="@+id/textPersonOrGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonConfigure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configure" />

    </LinearLayout>
</ScrollView>